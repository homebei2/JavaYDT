<?xml version="1.0" encoding="UTF-8"?>
		
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/more_item"
	android:gravity="center_vertical"
	android:focusable="true"	
	android:clickable="false"	
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">		
		<TextView
			android:id="@+id/m_name"
			android:textSize="@dimen/list_item_title_text_size"
			style="@style/ListItem"
			android:layout_toLeftOf="@+id/more_item_arrow"/>
		<TextView
			android:id="@+id/m_desc"
			android:textSize="@dimen/list_item_body_text_size"
			android:layout_toLeftOf="@+id/more_item_arrow"
			style="@style/ListItem"
			android:layout_below="@+id/m_name"/>	   
 	<ImageView
			android:id="@+id/more_item_arrow"
	    	android:src="@drawable/list_arrow"
	    	android:paddingRight="@dimen/item_padding_right"
	    	android:layout_alignParentRight="true"
	    	android:layout_centerVertical="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
	</RelativeLayout>